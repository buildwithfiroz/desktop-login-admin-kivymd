
MDScreen:
    name: 'Notify'

    BoxLayout:
        orientation: 'vertical'

        # Create a circular button with a close symbol
        
        MDFloatLayout:
        
            MDIconButton:
                icon: "close-circle"
                theme_text_color: "Custom"
                icon_size: "20sp"
                text_color: 1, 0, 0, 1  # Red color
                pos_hint: {'center_x': 0.06, 'center_y': 0.8}  # Adjust Y-axis position
                opacity: 0.9  # Initially hidden
                on_release: app.close_application()  # Define action on button press
            
            MDIconButton:
                icon: "./img/Wel.png"
                icon_size: "170sp"
